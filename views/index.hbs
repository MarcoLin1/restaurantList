<!-- search bar -->
<div class="container search-bar mt-5">
  {{!-- add button --}}
  <a href="./restaurant/new" class="d-flex justify-content-end" style="display: inline;">
    <button class="btn btn-info">New</button>
  </a>
  <div class="search-bar-outer">
    <div class="search-bar-inner">
      <form action="/search">
        <h4 class="mb-2 font-weight-bold">Search Restaurant</h4>
        <div class="input-group">
          <input type="text" name="keyword" class="form-control" placeholder="Enter your keywords"
            aria-label="Restaurant Name..." value="{{keyword}}" aria-describedby="search-button">
          <div class="input-group-append">
            <button class="btn btn-major" type="submit" id="search-button"><i class="fas fa-search"></i></button>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>

<!-- restaurant list -->
<div class="container mt-5">
  <div class="row">
    <div class="col-md-10 col-12 mx-auto">
      <div class="card-columns">

        {{#each restaurant}}
        <a href="/restaurant/{{this._id}}" class="text-secondary">
          <div class="card mb-3">
            <img class="card-img-top" src="{{this.image}}" alt="{{this.name}}" style="height: 200px;">
            <div class="card-body p-3">
              <h6 class="card-title mb-1">{{this.name}}</h6>

              <div class="restaurant-category mb-1">
                <i class="fas fa-utensils pr-2"></i> {{this.category}}
              </div>

              <span class="badge badge-pill badge-danger font-weight-normal">
                {{this.rating}}
                <i class="fas fa-star fa-xs"></i>
              </span>
              <div class="container d-flex justify-content-end">
                <form action="./restaurant/{{this._id}}" method="GET" class="mt-2">
                  <button class="btn btn-info btn-sm mr-1">Detail</button>
                </form>
                <form action="./restaurant/{{this._id}}/edit" method="GET" class="mt-2">
                  <button class="btn btn-warning btn-sm mr-1">Edit</button>
                </form>
                <form action="./restaurant/{{this._id}}/delete" method="POST" class="mt-2">
                  <button class="btn btn-danger btn-sm mr-1" onclick="removing()">Delete</button>
                </form>
              </div>
            </div>
          </div>
        </a>
        {{/each}}

      </div>
    </div>
  </div>
</div>

<script>
  function removing() {
    var yes = confirm('Do you want to delete it ?');
    if (yes) {
      return true
    } else {
      return false
    }
  }
</script>