<!-- search bar -->
<div class="container search-bar mt-3" style="display: inline;">
  <div class="dropdown show" style="display: flex; justify-content:flex-end; margin-right:10px;">
    <a href="/" class="btn mr-2" role="button" style="border-radius: 10%; border:1px solid #d6d4d4; color:#aaaaaa">
      <i class="fa fa-th fa-lg" aria-hidden="true"></i>
    </a>
    <a href="/list" class="mr-2 btn" role="button" style="border-radius: 10%; border:1px solid #d6d4d4; color:#aaaaaa">
      <i class="fas fa-list fa-lg"></i>
    </a>
    <a class="btn sortBtn dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown"
      aria-haspopup="true" aria-expanded="false" style="border-radius: 10%; border:1px solid #d6d4d4; color:#aaaaaa">
      <i class="fas fa-filter"></i>
    </a>
    <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
      <a class="dropdown-item" href="/sort/name/asc">Name: <i class="fas fa-sort-amount-down-alt"></i></a>
      <a class="dropdown-item" href="/sort/name/desc">Name: <i class="fas fa-sort-amount-down"></i></a>
      <a class="dropdown-item" href="/sort/category/asc">Category: <i class="fas fa-sort-amount-down-alt"></i></a>
      <a class="dropdown-item" href="/sort/category/desc">Category: <i class="fas fa-sort-amount-down"></i></a>
      <a class="dropdown-item" href="/sort/rating/asc">Rating: <i class="fas fa-star-half-alt"></i></a>
      <a class="dropdown-item" href="/sort/rating/desc">Rating: <i class="fas fa-star-half-alt"></i><i
          class="fas fa-star-half-alt"></i></a>
    </div>
      <a href="./restaurant/new" class="d-flex justify-content-end ml-2" style="display: inline;">
        <button class="btn addBtn"
          style="border-radius: 10%; border:1px solid #d6d4d4; color:#aaaaaa"><i
            class="fas fa-plus-square fa-lg"></i></button>
      </a>
  </div>

  <div class="search-bar-outer">
    <div class="search-bar-inner">
      <form action="/search">
        <h4 class="mb-2 font-weight-bold" style="font-family: 'Berkshire Swash', cursive;">Search Restaurant</h4>
        <div class="input-group">
          <input type="text" name="keyword" class="form-control mt-1" placeholder="Enter your keywords"
            aria-label="Restaurant Name..." value="{{keyword}}" aria-describedby="search-button"
            style="border-radius: 2%;">
          <div class="input-group-append">
            <button class="btn" type="submit" id="search-button"><i class="fas fa-search"></i></button>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>

<!-- restaurant list -->
<div class="container mt-3">
  <div class="row">
    <div class="col-md-10 col-12 mx-auto">
      <div class="card-columns">

        {{#each restaurant}}
        <a href="/restaurant/{{this._id}}" class="text-secondary">
          <div class="card mb-3">
            <img class="card-img-top" src="{{this.image}}" alt="{{this.name}}" style="height: 200px;">
            <div class="card-body p-3">
              <h6 class="card-title mb-1">{{this.name}}</h6>

              <div class="restaurant-category mb-1">
                <i class="fas fa-utensils pr-2"></i> {{this.category}}
              </div>

              <span class="badge badge-pill badge-danger font-weight-normal">
                {{this.rating}}
                <i class="fas fa-star fa-xs"></i>
              </span>
              <div class="container d-flex justify-content-end">
                <form action="/restaurant/{{this._id}}" method="GET" class="mt-2">
                  <button class="btn btn-sm mr-1 infoBtn"
                    style="border-radius: 25%; border:1px solid #f5f5f5; color:#aaaaaa"><i
                      class="fas fa-info"></i></button>
                </form>
                <form action="/restaurant/{{this._id}}/edit" method="GET" class="mt-2">
                  <button class="btn btn-sm mr-1 editBtn"
                    style="border-radius: 25%; border:1px solid #f5f5f5; color:#aaaaaa"><i
                      class="fas fa-edit"></i></button>
                </form>
                <form action="/restaurant/{{this._id}}?_method=DELETE" method="POST" class="mt-2">
                  <button class="btn btn-sm mr-1 deleteBtn"
                    style="border-radius: 25%; border:1px solid #f5f5f5; color:#aaaaaa" onclick="removing()"><i
                      class="fas fa-trash-alt"></i></button>
                </form>
              </div>
            </div>
          </div>
        </a>
        {{/each}}

      </div>
    </div>
  </div>
</div>

<script>
  function removing() {
    var yes = confirm('Do you want to delete it ?');
    if (yes) {
      return true
    } else {
      return false
    }
  }
</script>